<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="Controllers.Consultation.ConsultationListController"
            stylesheets="@../../css/consultationcss/consultationlist.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <top><fx:include source="../Navbar.fxml"/></top>
    <left><fx:include source="../Sidebar.fxml"/></left>

    <center>
        <StackPane styleClass="content-pane">
            <VBox spacing="24" alignment="TOP_CENTER" maxWidth="1050">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- â”€â”€ Header â”€â”€ -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="4">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ“‹" styleClass="page-icon"/>
                            <Label text="Consultation Records" styleClass="page-title"/>
                        </HBox>
                        <Label fx:id="subtitleLabel"
                               text="All consultations recorded by you"
                               styleClass="page-subtitle"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- Stats pill -->
                    <VBox styleClass="stats-pill" alignment="CENTER" spacing="2">
                        <Label fx:id="statsCount" text="â€”" styleClass="stats-count"/>
                        <Label text="total" styleClass="stats-label"/>
                    </VBox>
                </HBox>

                <!-- â”€â”€ Search bar â”€â”€ -->
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="card search-bar">
                    <TextField fx:id="searchField"
                               promptText="ðŸ”  Search by diagnosis, notes, or clientâ€¦"
                               styleClass="search-field"
                               prefWidth="340"
                               onKeyReleased="#handleSearch"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Clear" styleClass="btn btn-secondary" onAction="#handleClear"/>
                </HBox>

                <!-- â”€â”€ Cards list â”€â”€ -->
                <ScrollPane fitToWidth="true"
                            VBox.vgrow="ALWAYS"
                            styleClass="scroll-pane">
                    <VBox fx:id="cardsContainer" spacing="16" styleClass="cards-container">

                        <!-- Empty state -->
                        <VBox fx:id="emptyState" alignment="CENTER" spacing="12"
                              styleClass="empty-state-container"
                              visible="false" managed="false">
                            <Label text="ðŸ—‚ï¸" styleClass="empty-state-icon"/>
                            <Label text="No consultations yet" styleClass="empty-state-title"/>
                            <Label text="Consultations you record will appear here."
                                   styleClass="empty-state-subtitle"/>
                        </VBox>

                    </VBox>
                </ScrollPane>

            </VBox>
        </StackPane>
    </center>

</BorderPane>
