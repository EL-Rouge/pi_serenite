                                    </HBox>
                                    <HBox spacing="5" alignment="CENTER_LEFT">
                                        <Label text="ðŸ—“" style="-fx-font-size: 11;"/>
                                        <Label text="Created 15 Feb 2024" styleClass="meta-label"/>
                                    </HBox>
                                </HBox>
                            </VBox>

                            <!-- Action -->
                            <VBox alignment="CENTER" style="-fx-padding: 0 24 0 0;">
                                <Button text="+ Consultation"
                                        styleClass="btn, btn-accent"
                                        style="-fx-min-width: 140; -fx-font-size: 13px;"/>
                            </VBox>
                        </HBox>
                        <!-- END MOCK CARD -->

                        <!-- Empty state -->
                        <VBox fx:id="emptyState" alignment="CENTER" spacing="12"
