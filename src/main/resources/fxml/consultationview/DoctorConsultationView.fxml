<BorderPane fx:controller="Controllers.Consultation.DoctorConsultationsController"
            stylesheets="@../../css/appointmentcss/doctorconsultation.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <top><fx:include source="../Navbar.fxml"/></top>
    <left><fx:include source="../Sidebar.fxml"/></left>

    <center>
        <StackPane styleClass="content-pane">
            <VBox spacing="24" alignment="TOP_CENTER" maxWidth="1050">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- â”€â”€ Header â”€â”€ -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="4">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ðŸ©º" style="-fx-font-size: 28;"/>
                            <Label text="My Consultations" styleClass="page-title"/>
                        </HBox>
                        <Label fx:id="subtitleLabel"
                               text="Confirmed appointments awaiting consultation"
                               styleClass="page-subtitle"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- Stats pill -->
                    <VBox styleClass="stats-pill" alignment="CENTER" spacing="2">
                        <Label fx:id="statsCount" text="â€”" styleClass="stats-count"/>
                        <Label text="pending" styleClass="stats-label"/>
                    </VBox>
                </HBox>

                <!-- â”€â”€ Search bar â”€â”€ -->
                <HBox spacing="12" alignment="CENTER_LEFT"
                      styleClass="card" style="-fx-padding: 14 18 14 18;">
                    <TextField fx:id="searchField"
                               promptText="ðŸ”  Search by client name or appointment typeâ€¦"
                               styleClass="search-field"
                               prefWidth="340"
                               onKeyReleased="#handleSearch"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Clear" styleClass="btn, btn-secondary" onAction="#handleClear"/>
                </HBox>

                <!-- â”€â”€ Cards list â”€â”€ -->
                <ScrollPane fitToWidth="true"
                            VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-background: transparent;">

                    <VBox fx:id="cardsContainer" spacing="16"
                          style="-fx-background-color: transparent;">



                        <!-- Empty state -->
                        <VBox fx:id="emptyState" alignment="CENTER" spacing="12"
                              style="-fx-padding: 80 0 80 0;"
                              visible="false" managed="false">
                            <Label text="âœ…" style="-fx-font-size: 52;"/>
                            <Label text="All caught up!" styleClass="doctor-name-large"/>
                            <Label text="No confirmed appointments awaiting a consultation."
                                   styleClass="date-label"/>
                        </VBox>

                    </VBox>
                </ScrollPane>

            </VBox>
        </StackPane>
    </center>

</BorderPane>