                      styleClass="card" style="-fx-padding: 14 18 14 18;">
                    <TextField fx:id="searchField"
                               promptText="ðŸ”  Search by client name or appointment typeâ€¦"
                               styleClass="search-field"
                               prefWidth="340"
                               onKeyReleased="#handleSearch"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Clear" styleClass="btn, btn-secondary" onAction="#handleClear"/>
                </HBox>

                <!-- â”€â”€ Cards list â”€â”€ -->
                <ScrollPane fitToWidth="true"
                            VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-background: transparent;">

                    <VBox fx:id="cardsContainer" spacing="16"
