                        <HBox styleClass="doc-appt-card" spacing="0" alignment="CENTER_LEFT">

                            <!-- Left colour strip -->
                            <VBox styleClass="doc-card-strip" prefWidth="6" minHeight="140"/>

                            <!-- Client avatar circle -->
                            <StackPane styleClass="client-avatar" style="-fx-margin: 0 0 0 20;">
                                <Label text="JS" styleClass="client-avatar-text"/>
                            </StackPane>

                            <!-- Info -->
                            <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-padding: 18 16 18 16;">

                                <!-- Name + badges -->
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="John Smith" styleClass="client-name"/>
                                    <Label text="CONFIRMED"  styleClass="status-badge, status-confirmed"/>
                                    <Label text="ONLINE"     styleClass="type-badge"/>
                                </HBox>

                                <!-- Confirmed date -->
                                <HBox spacing="8" alignment="CENTER_LEFT" styleClass="confirmed-date-box">
                                    <Label text="ðŸ“…" style="-fx-font-size: 12;"/>
